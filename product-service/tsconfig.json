{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
  },
  
  "include": ["src/**/*", "test/**.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
